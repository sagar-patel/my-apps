<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/saa"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Spinner
        android:id="@+id/convertion_spinner"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/selection_spinner"
        android:layout_below="@+id/selection_spinner"
        android:layout_marginTop="34dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/selection_spinner"
        android:layout_alignParentLeft="true"
        android:text="Select Parameter"
        android:textSize="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/selection_spinner"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="27dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/convertion_spinner"
        android:layout_alignLeft="@+id/textView1"
        android:text="Select Conversion"
        android:textSize="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/output_textView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/input_editText"
        android:layout_below="@+id/input_editText"
        android:layout_marginTop="20dp"
        android:hint="Result "
                android:background="#FFFFFF"
        
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/result_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/output_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:background="#000000"
        android:textColor="#ffffff"
        android:text="Convert" />

    <EditText
        android:id="@+id/input_editText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/convertion_spinner"
        android:layout_marginRight="16dp"
        android:layout_marginTop="31dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Enter value"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/result_button"
        android:layout_alignLeft="@+id/textView3"
        android:text="Result"
        android:textSize="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/output_textView"
        android:layout_alignLeft="@+id/textView2"
        android:text="Value"
        android:textSize="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
